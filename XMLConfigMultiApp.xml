<TP-ACyEDA>
	<app tittle="Audio To Video">
		<command name="ffmpeg"
			params="-i [AUDIO] -max [DURMAX] -loop 1 -i [IMAGE] -vcodec libx264 -preset slow -crf 20 -threads 0 -acodec copy -shortest [VIDEO]" />
		<control name="AUDIO" class="tp.control.PanelDeArchivo">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>
						mp3
					</extension>
					<extension>
						wav
					</extension>
					<extension>
						wma
					</extension>
				</tipo-arch>
			</control-type>
		</control>
		<control name="DURMAX" class="tp.control.PanelDeDuracion">
			<control-type name="TEXTFIELD">
				<def-dir>100</def-dir>
			</control-type>
		</control>
		<control name="VIDEO" class="" label="Ruta de salida del video">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>mkv</extension>
				</tipo-arch>
			</control-type>
		</control>
		<control name="IMAGEN" class="" label="Ruta de imagen para el video">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>jpeg</extension>
				</tipo-arch>
			</control-type>
		</control>
	</app>
	<app tittle="Video Extract">
		<command name="ffmpeg"
			params=" -i [VIDEO] -ss[DESDE] -to[HASTA] -vcodec libx264 -acodec libvo_aacenc [OUTPUT] " />
		<control name="VIDEO" class="tp.control.FileChooser">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>mp3</extension>
				</tipo-arch>
			</control-type>
		</control>
		<control name="DESDE" class="tp.control.PanelDeDuracion">
			<control-type name="TIMEFIELD" />
		</control>
		<control name="HASTA" class="tp.control.PanelDeDuracion">
			<control-type name="TIMEFIELD">
			</control-type>
		</control>
		<control name="OUTPUT" class="">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>mkv</extension>
				</tipo-arch>
			</control-type>
		</control>
	</app>
	<app tittle="Rotate Video">
		<command name="ffmpeg" params=" -i [VIDEO] -filter:v "
			rotate="[ANGULO]*PI/180
			o [ OUTPUT ]" />
		<control name="VIDEO" class="tp.control.FileChooser">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>mp3</tipo-arch>
			</control-type>
		</control>
		<control name="ANGULO" class="tp.control.Angulo">
			<control-type name="TEXTFIELD">
			</control-type>
		</control>
		<control name="OUTPUT" class="tp.control.FileChooser">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>mkv</extension>
				</tipo-arch>
			</control-type>
		</control>
	</app>
	<app tittle="Join Wav">

		<command name="ffmpeg" params=" -f concat -c [LISTA] -c copy  [VIDEO]" />
		<control name="LISTA" class="tp.control.FileChooser"
			label="Lista de videos contenida en un txt">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>txt</extension>
				</tipo-arch>
			</control-type>
		</control>
		<control name="OUTPUT" label="Donde guardar el video?">
			<control-type name="FILE-CHOOSER">
				<def-dir>/usr/pablo/mis canciones</def-dir>
				<tipo-arch>
					<extension>mkv</extension>
				</tipo-arch>
			</control-type>
		</control>
	</app>
</TP-ACyEDA>
